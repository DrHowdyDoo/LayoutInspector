<?xml version="1.0" encoding="utf-8"?>
<com.drhowdydoo.layoutinspector.ui.DrawableFrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#0AFFFFFF"
    android:visibility="invisible"
    tools:visibility="visible"
    android:fitsSystemWindows="true"
    android:animateLayoutChanges="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/draggable_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_bg"
            style="?attr/materialCardViewFilledStyle"
            android:layout_width="match_parent"
            android:layout_height="312dp"
            android:layout_marginHorizontal="12dp"
            android:focusable="true"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="?colorSurfaceContainerLowest"
            app:cardCornerRadius="28dp"
            android:layout_gravity="center_horizontal|bottom">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingHorizontal="4dp"
                android:paddingBottom="8dp">

                <ImageView
                    android:id="@+id/drag_handle_left"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="drag handle"
                    android:alpha="0.1"
                    android:background="@drawable/rounded_drag_handle_24"
                    android:backgroundTint="?colorOnSurface"
                    app:layout_constraintStart_toEndOf="@id/btnExpandCollapse"
                    app:layout_constraintEnd_toStartOf="@id/tabLayout"
                    app:layout_constraintBottom_toBottomOf="@id/btnExpandCollapse"
                    app:layout_constraintTop_toTopOf="@id/btnExpandCollapse" />

                <ImageView
                    android:id="@+id/drag_handle_right"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:alpha="0.1"
                    android:contentDescription="drag handle"
                    android:background="@drawable/rounded_drag_handle_24"
                    android:backgroundTint="?colorOnSurface"
                    app:layout_constraintStart_toEndOf="@id/tabLayout"
                    app:layout_constraintEnd_toStartOf="@id/btnSetting"
                    app:layout_constraintBottom_toBottomOf="@id/btnSetting"
                    app:layout_constraintTop_toTopOf="@id/btnSetting" />

                <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tabLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="42dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/tab_indicator"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tabGravity="center"
                    app:tabIndicator="@drawable/tab_indicator"
                    app:tabIndicatorColor="?colorSurfaceContainer"
                    app:tabIndicatorFullWidth="true"
                    app:tabIndicatorGravity="center"
                    app:tabIndicatorHeight="42dp"
                    app:tabSelectedTextColor="?colorOnBackground">

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Component" />

                    <com.google.android.material.tabs.TabItem
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hierarchy" />

                </com.google.android.material.tabs.TabLayout>

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:animateLayoutChanges="true"
                    android:clipToPadding="false"
                    android:paddingTop="4dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tabLayout" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnSetting"
                    style="?materialIconButtonOutlinedStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|top"
                    android:layout_marginTop="6dp"
                    app:icon="@drawable/rounded_settings_24"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExpandCollapse"
                    style="?materialIconButtonFilledTonalStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:backgroundTint="?colorSurfaceContainer"
                    app:icon="@drawable/rounded_keyboard_arrow_down_24"
                    app:iconTint="?colorOnSurface"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </com.google.android.material.card.MaterialCardView>

        <include
            android:id="@+id/settings_layout"
            layout="@layout/settings_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            tools:visibility="visible" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</com.drhowdydoo.layoutinspector.ui.DrawableFrameLayout>